<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		 version="3.0">
	
	<display-name>Utilizando dos  paquetes y dos servlets</display-name>
	<description>se utilizan dos paquetes y mas de un servlet </description>
	
	<servlet>
		<servlet-name>ServletUno</servlet-name>
		<servlet-class>com.desa.PrimerServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ServletDos</servlet-name>
		<servlet-class>org.abi.SegundoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ServletUno</servlet-name>
		<url-pattern>/primero.html</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ServletDos</servlet-name>
		<url-pattern>/segundo.html</url-pattern>
	</servlet-mapping>
	
</web-app>